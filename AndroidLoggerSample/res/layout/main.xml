<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/sample_simple"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onSampleSimple"
        android:text="@string/sample_simple" />

    <Button
        android:id="@+id/sample_download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onSampleDownload"
        android:text="@string/sample_download" />

    <Button
        android:id="@+id/sample_dynamic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onSampleDynamic"
        android:text="@string/sample_dynamic" />

    <Button
        android:id="@+id/sample_dynamic_class"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onSampleDynamicClass"
        android:text="@string/sample_dynamic_class" />

</LinearLayout>